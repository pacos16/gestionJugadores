        <Button x:Name="btBorrar" Content="Borrar" HorizontalAlignment="Left" Margin="480,370,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.4,1.983" Click="BtBorrar_Click"/>
        <Button x:Name="btCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="595,370,0,0" VerticalAlignment="Top" Width="75" Click="BtCancelar_Click"/>

    </Grid>
</Window>
