<Window x:Class="Gestion_Jugadores.Modificar"
       
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_Jugadores"
        mc:Ignorable="d"
        Title="Window1" Height="675.333" Width="628.333">
    <Grid Margin="10,29,3.333,6">
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="110,115,0,0" VerticalAlignment="Top"/>
